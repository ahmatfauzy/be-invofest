generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model CompetitionRegistration {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())
  competition     CompetitionType
  participantType ParticipantType
  degree          Degree
  email           String
  fullName        String?
  teamName        String?
  school          String
  leaderName      String?
  memberCardUrl   String
  paymentUrl      String
  igFollowUrl     String
}

enum CompetitionType {
  POSTER
  UIUX
  WEB
}

enum ParticipantType {
  INDIVIDU
  TEAM
}

enum Degree {
  SMA
  MAHASISWA
}

// Events
model SeminarRegistration {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  email         String
  fullName      String
  category      Category  // umum / mahasiswa
  whatsapp      String
  institution   String    // asal instansi
  paymentUrl    String    // cloudinary
  igFollowUrl   String    // cloudinary
}

model WorkshopRegistration {
  id              Int            @id @default(autoincrement())
  createdAt       DateTime       @default(now())
  email           String
  fullName        String
  workshop        WorkshopChoice
  category        Category
  whatsapp        String
  institution     String
  paymentUrl      String
  igFollowUrl     String
}

model TalkshowRegistration {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  email         String
  fullName      String
  category      Category
  whatsapp      String
  institution   String
  paymentUrl    String
  igFollowUrl   String
}

enum Category {
  UMUM
  MAHASISWA
}

enum WorkshopChoice {
  CYBER_SECURITY
  ARTIFICIAL_INTELLIGENCE
  MOBILE_DEV
}