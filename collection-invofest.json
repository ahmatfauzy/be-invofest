{
  "info": {
    "name": "Invofest API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// auto save token after login",
          "if (pm.request.url.toString().includes('/auth/login')) {",
          "  const json = pm.response.json();",
          "  pm.environment.set('token', json.token);",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "host",
      "value": "localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@invofest_harkatnegeri.com\",\n  \"password\": \"123\"\n}"
            },
            "url": {
              "raw": "{{host}}/auth/login",
              "host": ["{{host}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Competition",
      "item": [
        {
          "name": "Regist Competition – Individu SMA",
          "request": {
            "method": "POST",
            "header": [],
