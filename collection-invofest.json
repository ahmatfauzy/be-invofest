    {
      "name": "Admin",
      "item": [
        {
          "name": "List Competition",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{host}}/admin/participants?competition=POSTER&degree=SMA&participantType=INDIVIDU",
              "host": ["{{host}}"],
              "path": ["admin", "participants"],
              "query": [
                {
                  "key": "competition",
