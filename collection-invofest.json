                { "key": "participantType", "value": "INDIVIDU" },
                { "key": "degree", "value": "SMA" },
                { "key": "email", "value": "siswa.poster@smk.id" },
                { "key": "fullName", "value": "Budi Santoso" },
                { "key": "school", "value": "SMK N 1 Jogja" },
